<Window x:Class="Polylines.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Polylines"
        mc:Ignorable="d"
        Title="MainWindow" Height="340" Width="250">
    <Grid>
        <StackPanel Name="stackPanel1" Margin="10">
            <TextBlock Text="Polyline and polygon:"/>
            <Polygon Stroke="Black" StrokeThickness="3" Points="0 70,60 10,110 60,160 10, 210 70"/>
            
            <TextBlock Text="Closed Polyline:" Margin="0 10 0 0"/>
            <Polygon Stroke="Black" StrokeThickness="3" Points="0 70,60 10,110 60,160 10, 210 70,0 70"/>

            <TextBlock Text="Sine curve:" Margin="0 10 0 0"/>
            <Polygon Name="polyline1" Stroke="red" StrokeThickness="2"/>
        </StackPanel>
    </Grid>
</Window>
