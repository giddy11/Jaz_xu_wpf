<Window x:Class="Personal_Project.PolygonFillRule"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Personal_Project"
        mc:Ignorable="d"
        Title="PolygonFillRule" Height="600" Width="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="FillRule = EvenOdd:" Margin="0 0 0 5"/>
            <Polygon Stroke="Black" Fill="LightGray"  Points="0 0,0 150,100 150,100 100,50 100,50 50,100 50,100 100,150 100,150 0"/>
        </StackPanel>
    </Grid>
</Window>
